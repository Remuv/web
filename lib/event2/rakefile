require 'rake/clean'

PACKAGE = 'event2'

LIB = [
  "event",
  "event_core",
  "event_extra",
  "event_openssl",
  "event_pthreads"
]

INCLUDE = [
  "$(CORTO_INCLUDE)",
  "$(CORTO_INCLUDE)/event2"
]

task :source_build do
    system("./build.sh")
end

task :prebuild => [:source_build]

CLOBBER.include("install")

require "#{ENV['CORTO_BUILD']}/package"
