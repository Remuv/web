require 'rake/clean'

PACKAGE = 'lib/evhtp'
NOCORTO = true

LIB = [
  "evhtp"
]

INCLUDE = [
  "$(CORTO_INCLUDE)",
  "$(CORTO_INCLUDE)/evhtp"
]

task :source_build do
    system("./build.sh")
end

task :prebuild => [:source_build]

CLOBBER.include("install")

require "#{ENV['CORTO_BUILD']}/package"
